<h1>Your Recipe Database</h1>

<table>
  <tr>
    <th>Name of the Dish<br></th>
    <th>Type	  <br></th>
    <th>Description   <br></th>
  </tr>

  <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.descp %></td>
        <td><%= link_to 'Show', movie_path(movie) %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie_path(movie),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <%end%>
  <%= form_tag(movies_path, :method => "get", class: "navbar-form", id: "search-form") do %>
      <p>
        <%= text_field_tag :search, params[:search], placeholder: "Search Movies" %>
        <%= submit_tag "Search"%>
      </p>
  <% end %>
  <%= link_to 'New Recipe', new_movie_path %>
</table>
